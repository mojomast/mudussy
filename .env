# MUD Engine Server Configuration for Development
NODE_ENV=development
MUD_HOST=0.0.0.0
MUD_PORT=4000

# Engine Configuration
MUD_MAX_ENTITIES=1000
MUD_TICK_INTERVAL=2000
MUD_ENABLE_PLUGINS=false
MUD_SAVE_INTERVAL=60000
MUD_LOG_LEVEL=debug

# Networking Configuration
MUD_ENABLE_NETWORKING=true
MUD_NETWORK_HOST=0.0.0.0
MUD_NETWORK_PORT=4000
MUD_MAX_CONNECTIONS=10
MUD_CONNECTION_TIMEOUT=30000
MUD_IDLE_TIMEOUT=60000
MUD_RATE_LIMIT_WINDOW=5000
MUD_RATE_LIMIT_MAX_REQUESTS=5

# World Configuration
MUD_ENABLE_WORLD=true
MUD_WORLD_PATH=./engine/modules/world/content
MUD_DEFAULT_ROOM_ID=tavern
MUD_MAX_ITEMS_PER_ROOM=20
MUD_MAX_PLAYERS_PER_ROOM=5
MUD_ALLOW_ROOM_CREATION=false

# Debugging Configuration
MUD_DEBUG=true
MUD_DEBUG_MODE=verbose
MUD_ENABLE_DEV_TOOLS=true
MUD_ENABLE_CORRELATION_ID=true
MUD_ENABLE_METRICS=true
MUD_ENABLE_HEALTH_CHECKS=true
MUD_LOG_FORMAT=console
MUD_LOG_FILE_PATH=./logs/mud-engine.log

# Web Client Configuration
MUD_WEB_PORT=3000
MUD_WEB_HOST=0.0.0.0
MUD_CORS_ORIGIN=*

# Performance & Monitoring
MUD_MEMORY_LIMIT=1024
MUD_HEALTH_CHECK_INTERVAL=15000
MUD_METRICS_PREFIX=mud_debug

# Error Handling
MUD_DEBUG_CONFIG=true
MUD_ENABLE_ERROR_STACK_TRACES=true