# MUD Engine Environment Configuration (12-Factor Compliant)
# Copy this file to .env and adjust values for your environment
# DO NOT commit .env files to version control

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application environment (development, staging, production)
NODE_ENV=development

# Application port and host
MUD_PORT=3000
MUD_HOST=0.0.0.0

# Application version (automatically set by build process)
MUD_VERSION=1.0.0

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level (error, warn, info, debug, verbose)
MUD_LOG_LEVEL=info

# Log format (json, console)
MUD_LOG_FORMAT=console

# Log file path (for production)
MUD_LOG_FILE_PATH=./logs/mud-engine.log

# Enable structured logging with correlation IDs
MUD_ENABLE_CORRELATION_ID=true

# ===========================================
# ENGINE CONFIGURATION
# ===========================================

# Maximum entities in the game world
MUD_MAX_ENTITIES=10000

# Engine tick interval in milliseconds
MUD_TICK_INTERVAL=1000

# Enable plugin system
MUD_ENABLE_PLUGINS=true

# Game state save interval in milliseconds
MUD_SAVE_INTERVAL=300000

# Maximum commands per second per user
MUD_MAX_COMMANDS_PER_SECOND=10

# ===========================================
# NETWORKING CONFIGURATION
# ===========================================

# Enable networking module
MUD_ENABLE_NETWORKING=true

# Network host for Telnet/WebSocket connections
MUD_NETWORK_HOST=0.0.0.0

# Network port for game connections
MUD_NETWORK_PORT=4000

# Maximum concurrent connections
MUD_MAX_CONNECTIONS=100

# Connection timeout in milliseconds
MUD_CONNECTION_TIMEOUT=30000

# Idle timeout in milliseconds
MUD_IDLE_TIMEOUT=300000

# Rate limiting window in milliseconds
MUD_RATE_LIMIT_WINDOW=10000

# Maximum requests per rate limit window
MUD_RATE_LIMIT_MAX_REQUESTS=20

# ===========================================
# WORLD CONFIGURATION
# ===========================================

# Enable world module
MUD_ENABLE_WORLD=true

# World content path
MUD_WORLD_PATH=./engine/modules/world/content

# Default room ID for new players
MUD_DEFAULT_ROOM_ID=tavern

# Maximum items per room
MUD_MAX_ITEMS_PER_ROOM=50

# Maximum players per room
MUD_MAX_PLAYERS_PER_ROOM=10

# Allow players to create rooms
MUD_ALLOW_ROOM_CREATION=false

# World persistence enabled
MUD_WORLD_PERSISTENCE=true

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database type (redis, mongodb, postgresql, sqlite)
MUD_DATABASE_TYPE=redis

# Redis configuration
MUD_REDIS_HOST=localhost
MUD_REDIS_PORT=6379
MUD_REDIS_PASSWORD=
MUD_REDIS_DB=0
MUD_REDIS_PREFIX=mud:

# PostgreSQL configuration (if using PostgreSQL)
MUD_POSTGRES_HOST=localhost
MUD_POSTGRES_PORT=5432
MUD_POSTGRES_DATABASE=mud_engine
MUD_POSTGRES_USERNAME=mud_user
MUD_POSTGRES_PASSWORD=

# MongoDB configuration (if using MongoDB)
MUD_MONGODB_URI=mongodb://localhost:27017/mud_engine

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Enable HTTPS/SSL
MUD_ENABLE_SSL=false

# SSL certificate path (for production)
MUD_SSL_CERT_PATH=/etc/ssl/certs/mud-engine.crt
MUD_SSL_KEY_PATH=/etc/ssl/private/mud-engine.key

# CORS configuration
MUD_CORS_ORIGIN=*

# Session secret for web authentication
MUD_SESSION_SECRET=your-super-secret-session-key-here

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================

# Enable metrics collection
MUD_ENABLE_METRICS=true

# Metrics prefix
MUD_METRICS_PREFIX=mud

# Enable health checks
MUD_ENABLE_HEALTH_CHECKS=true

# Health check interval in milliseconds
MUD_HEALTH_CHECK_INTERVAL=30000

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================

# Memory limit (Node.js --max-old-space-size)
MUD_MEMORY_LIMIT=2048

# Enable clustering (multiple worker processes)
MUD_ENABLE_CLUSTERING=false

# Number of worker processes (0 = auto-detect CPU cores)
MUD_WORKER_PROCESSES=0

# Shutdown grace period in milliseconds
MUD_SHUTDOWN_GRACE_PERIOD=30000

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Email service configuration (for notifications)
MUD_SMTP_HOST=smtp.gmail.com
MUD_SMTP_PORT=587
MUD_SMTP_SECURE=false
MUD_SMTP_USER=
MUD_SMTP_PASSWORD=

# Discord webhook for notifications
MUD_DISCORD_WEBHOOK_URL=

# Slack webhook for notifications
MUD_SLACK_WEBHOOK_URL=

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Enable development tools
MUD_ENABLE_DEV_TOOLS=true

# Enable debug mode
MUD_DEBUG=false

# Hot reload enabled
MUD_HOT_RELOAD=true

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Enable automatic backups
MUD_ENABLE_BACKUPS=true

# Backup interval in milliseconds
MUD_BACKUP_INTERVAL=3600000

# Backup retention period in days
MUD_BACKUP_RETENTION_DAYS=30

# Backup directory
MUD_BACKUP_DIR=./backups

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable experimental features
MUD_EXPERIMENTAL_FEATURES=false

# Enable beta features
MUD_BETA_FEATURES=false

# Custom feature flags (JSON string)
MUD_FEATURE_FLAGS='{"chat": true, "combat": true, "magic": false}'

# ===========================================
# INTEGRATION CONFIGURATION
# ===========================================

# Enable webhook integrations
MUD_ENABLE_WEBHOOKS=false

# Webhook secret for verification
MUD_WEBHOOK_SECRET=

# API rate limiting
MUD_API_RATE_LIMIT=1000

# ===========================================
# LOCALIZATION CONFIGURATION
# ===========================================

# Default language
MUD_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
MUD_SUPPORTED_LANGUAGES=en,es,fr,de

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Custom configuration file path
MUD_CONFIG_FILE=

# Override configuration (JSON string)
MUD_CONFIG_OVERRIDE='{}'

# Debug configuration loading
MUD_DEBUG_CONFIG=false